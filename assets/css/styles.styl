@import "variable"


html
  text-size-adjust none
  touch-action none
  font-size 10px
  box-sizing border-box
  font-family "PingFang SC"

body
  position relative
  word-break break-all
  user-select none
  touch-callout none
  background-color $body-color
  -webkit-tap-highlight-color transparent

html, form, button, input[type=text], input[type=password], input[type=tel], select, textarea
  tap-highlight-color rgba(0, 0, 0, 0)
  appearance none
  padding 0
  margin 0
  box-sizing border-box

body, h1, h2, h3, h4, h5, h6, hr, p, dl, dt, dd, ul, ol, li, th, td, div, figure, header, section, aside, footer
  margin 0
  padding 0
  box-sizing border-box

a
a:visited
a:active
  text-decoration none
  outline none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  color currentColor

em, i, b, h1, h2, h3, h4, h5, h6
  font-style normal
  font-weight normal

input, textarea
  line-height normal
  outline none
  border none
  padding 0;
  font-size inherit
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

textarea
  width 100%;
  resize none
  line-height $default-line-height
  padding 0.5rem
  background-color transparent

button
  background transparent
  border none
  outline none
  cursor pointer
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  border-radius 0

input
  background-color transparent
  caret-color $theme-main-red-color
  -webkit-appearance none

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

ol, ul, li
  list-style none

img
  border none
  vertical-align middle

::-webkit-input-placeholder
  color $font-light-gray-color

strong
  font-weight normal



.swiper-pagination-bullets
  bottom .2rem !important
  .swiper-pagination-bullet
    width 1rem
    height .2rem
    background #d6d6d6
    opacity 1
    border-radius 1px
  .swiper-pagination-bullet-active
    background-color $theme-main-red-color

.home-guide-pagination
  .swiper-pagination-bullet
    width .8rem
    height @width
    background #f1f2f0
    opacity 1
    border-radius 50%
  .swiper-pagination-bullet-active
    background-color $theme-main-red-color

.page
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  background $body-color;
  overflow-y scroll

.loginPage
  position fixed
  z-index 4
  top 0
  width 100%
  height 100%
  overflow-y scroll
  background-color $body-color

.page-warp
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  box-sizing border-box
  overflow-y scroll
  -webkit-overflow-scrolling touch

.loading-container
  margin-top 4rem


.up
  color $theme-main-red-color !important

.down
  color $theme-main-green-color !important


.tool-title
  text-align center !important

p
  word-break normal

.movePage
  position fixed
  width 100%
  top 0
  left 0
  bottom 0


.screen
  position fixed
  width 100%
  height 100%
  left 0
  bottom 0
  background url(/assets/image/fcl_screen.png) no-repeat center center/cover

body,
html
  height 100%
.app-page
  display flex
  flex-direction column
  width 100%
  height 100%
  overflow hidden
.app-nav-wrap
  flex none

.flexListBox
  flex auto
  overflow auto

.warningFlex
  flex auto
  overflow auto
  display flex
  flex-direction column

