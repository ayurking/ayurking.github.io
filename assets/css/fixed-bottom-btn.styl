fixed-bottom-btn(font-sise, background-color = transparent)
  display flex
  center()
  position relative
  padding 0
  z-index 2
  letter-spacing 1px
  .large-btn
    flex auto
    height 4.9rem
    box-sizing content-box
    padding-bottom constant(safe-area-inset-bottom)
    padding-bottom env(safe-area-inset-bottom)
  button
    height 4.9rem
    width 100%
    color $font-white-color
    font-size font-sise
    background-color background-color
    border-radius 0
    &:active
      bg-darken(@background-color)
    &[disabled]
      background-color $theme-disabled-color
